<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <TextView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:text="From Date"
           android:textColor="#214485"/>
       <EditText
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:id="@+id/fromdatevalue"/>

       <TextView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:text="To Date"
           android:textColor="#214485"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/todatevalue"/>
   </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/sbtfromdatetodate"
        android:text="SUBMIT"
        android:textColor="#214485"
        android:background="#f8f29543"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#214485"
            android:textSize="20dp"
            android:id="@+id/txtvalueoftotalclasses"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#214485"
            android:textSize="20dp"
            android:id="@+id/txtvalueofclassesattend"/>

    </LinearLayout>
    </LinearLayout>

</ScrollView>